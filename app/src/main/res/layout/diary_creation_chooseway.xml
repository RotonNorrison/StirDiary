<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/RelativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

>
    <ImageView
            android:id="@+id/diary_creation_text_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="265dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back3"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Way of Bartending"
              android:textColor="#4d245f"
              android:layout_centerHorizontal="true"
              android:textSize="30sp"
              android:layout_gravity="center"
    />
    <ImageView android:layout_width="180dp" android:layout_height="180dp"
               android:id="@+id/chooseStirWay_radiobtn_tiaohe"
               android:src="@drawable/stir"
               android:layout_marginTop="156dp"
               android:layout_marginLeft="240dp"
               android:layout_marginRight="20dp"
    />
    <ImageView android:layout_width="150dp" android:layout_height="150dp"
               android:id="@+id/chooseStirWay_radiobtn_duihe"
               android:src="@drawable/shaker"
               android:layout_marginTop="270dp"
               android:layout_marginLeft="30dp"
    />

    <ImageView android:layout_width="130dp" android:layout_height="130dp"
               android:id="@+id/chooseStirWay_radiobtn_yaohe"
               android:src="@drawable/layer"
               android:layout_marginTop="420dp"
               android:layout_marginLeft="220dp"
    />
    <ImageView android:layout_width="120dp" android:layout_height="120dp"
               android:id="@+id/diary_creation_chooseway_previous"
               android:src="@drawable/previous"
               android:layout_marginBottom="40dp"
               android:layout_marginLeft="30dp"
               android:layout_alignParentBottom="true"/>
    />
    <ImageView android:layout_width="90dp" android:layout_height="90dp"
               android:id="@+id/diary_creation_chooseway_publicc"
               android:src="@drawable/publicc"
               android:layout_marginBottom="50dp"
               android:layout_toRightOf="@id/diary_creation_chooseway_previous"
               android:layout_marginLeft="20dp"
               android:layout_alignParentBottom="true"/>
    />
    <ImageView android:layout_width="110dp" android:layout_height="110dp"
               android:id="@+id/diary_creation_chooseway_save"
               android:src="@drawable/save"
               android:layout_marginBottom="42dp"
               android:layout_toRightOf="@id/diary_creation_chooseway_publicc"
               android:layout_marginLeft="25dp"
               android:layout_alignParentBottom="true"/>
    />
</RelativeLayout>