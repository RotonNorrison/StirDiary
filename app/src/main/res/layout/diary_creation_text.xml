<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6B944"
>
    <TextView
            android:text="Talk about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" android:textColor="@android:color/white"
            android:textSize="36sp" android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintBottom_toTopOf="@+id/imageViewtext2"
            app:layout_constraintVertical_bias="0.35000002" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Your feelings and thoughts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" android:textColor="@android:color/white"
            android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginTop="16dp"/>
    <View android:layout_height="5px" android:background="#FFFFFF" android:layout_width="240dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintBottom_toTopOf="@+id/imageViewtext2" android:layout_marginLeft="32dp"
          android:layout_marginStart="32dp" android:id="@+id/view2" android:layout_marginBottom="24dp"/>
    <ImageView android:layout_width="393dp" android:layout_height="500dp"
               app:srcCompat="@drawable/ic_newboard" app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:scaleType="fitXY"
               android:id="@+id/imageViewtext2"
               app:layout_constraintHorizontal_bias="1.0"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:id="@+id/creatingAddText_nextbtn"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_marginTop="84dp"
            android:background="@null"
            android:drawableBottom="@drawable/ic_next"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/imageViewtext2"
            app:layout_constraintVertical_bias="0.88" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.93"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/creatingAddText_editText"
            android:background="@null"
            app:layout_constraintTop_toTopOf="@+id/imageViewtext2"
            app:layout_constraintStart_toStartOf="@+id/imageViewtext2"
            app:layout_constraintEnd_toEndOf="@+id/imageViewtext2"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewtext2"/>

</androidx.constraintlayout.widget.ConstraintLayout>