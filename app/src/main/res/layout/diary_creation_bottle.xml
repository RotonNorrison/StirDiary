<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">
    <ImageView android:layout_width="338dp" android:layout_height="450dp"
               android:background="@drawable/ic_board" app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="36dp"
               android:layout_marginTop="134dp" android:layout_marginStart="36dp"/>
    <ImageButton
            android:id="@+id/chooseBottle_Bottle4_btn"
            android:layout_width="31dp"
            android:layout_height="82dp"
            android:background="@drawable/ic_glass4_selector"
            app:layout_constraintStart_toEndOf="@+id/chooseBottle_Bottle3_btn" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="306dp"/>
    <ImageButton
            android:id="@+id/chooseBottle_Bottle2_btn"
            android:layout_width="57dp"
            android:layout_height="49dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="340dp"
            app:layout_constraintStart_toEndOf="@+id/chooseBottle_Bottle1_btn"
            app:layout_constraintTop_toTopOf="parent"
