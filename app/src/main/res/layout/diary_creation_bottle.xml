<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C69C6D">

    <ImageView
            android:id="@+id/chooseBase_img_background1"
            android:layout_width="0dp"
            android:layout_height="500dp"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_blank" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"/>
    <View android:layout_height="5px" android:background="#FFFFFF" android:layout_width="240dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintBottom_toTopOf="@+id/chooseBase_img_background1" android:layout_marginLeft="32dp"
          android:layout_marginStart="32dp" android:layout_marginBottom="24dp"/>

    <ImageButton
            android:id="@+id/chooseBottle_Bottle4_btn"
            android:layout_width="31dp"
            android:layout_height="82dp"
            android:background="@drawable/ic_glass4_selector"
            app:layout_constraintStart_toEndOf="@+id/chooseBottle_Bottle3_btn" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="306dp"/>
    <ImageButton
            android:id="@+id/chooseBottle_Bottle2_btn"
            android:layout_width="57dp"
            android:layout_height="49dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="340dp"
            app:layout_constraintStart_toEndOf="@+id/chooseBottle_Bottle1_btn"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_glass2_selector"/>
    <ImageButton
            android:id="@+id/chooseBottle_Bottle3_btn"
            android:layout_width="42dp"
            android:layout_height="76dp"
            android:background="@drawable/ic_glass3_selector"
            app:layout_constraintStart_toEndOf="@+id/chooseBottle_Bottle2_btn" android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="314dp"/>
    <ImageButton
            android:id="@+id/chooseBottle_Bottle1_btn"
            android:layout_width="43dp"
            android:layout_height="89dp"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="302dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_glass1_selector"/>

    <Button
            android:id="@+id/chooseBottle_nextbtn"
            android:layout_width="61dp"
            android:layout_height="53dp"
            android:background="@null"
            android:drawableBottom="@drawable/ic_next"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/chooseBase_img_background1"
            app:layout_constraintVertical_bias="0.89" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.94"/>

    <ImageView android:layout_width="308dp" android:layout_height="21dp"
               android:background="@drawable/ic_shelf"
               app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.493"
               app:layout_constraintTop_toBottomOf="@+id/chooseBottle_Bottle3_btn" android:id="@+id/imageView4"/>
    <TextView
            android:text="Glass Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textColor="@android:color/white"
            android:textSize="36sp" android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintBottom_toTopOf="@+id/chooseBase_img_background1"
            app:layout_constraintVertical_bias="0.35000002" android:layout_marginTop="8dp"/>
    <TextView
            android:text="To begin with..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textColor="@android:color/white"
            android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginTop="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>

</androidx.constraintlayout.widget.ConstraintLayout>