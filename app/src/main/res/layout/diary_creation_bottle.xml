<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/chooseBottle_Bottle3_btn"
        android:layout_width="134dp"
        android:layout_height="217dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseBottle_Bottle1_btn"
        app:srcCompat="@drawable/ic_glass3_selector" />

    <ImageButton
        android:id="@+id/chooseBottle_Bottle4_btn"
        android:layout_width="127dp"
        android:layout_height="239dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toEndOf="@+id/chooseBottle_Bottle3_btn"
        app:layout_constraintTop_toBottomOf="@+id/chooseBottle_Bottle2_btn"
        app:srcCompat="@drawable/ic_glass4_selector" />

    <ImageButton
        android:id="@+id/chooseBottle_Bottle2_btn"
        android:layout_width="162dp"
        android:layout_height="198dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="88dp"
        app:layout_constraintStart_toEndOf="@+id/chooseBottle_Bottle1_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_glass2_selector" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选杯子"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/chooseBottle_nextbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="588dp"
        android:text="Next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/chooseBottle_Bottle1_btn"
        android:layout_width="101dp"
        android:layout_height="251dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_glass1_selector" />
</androidx.constraintlayout.widget.ConstraintLayout>