            android:id="@+id/chooseBottle_Bottle1_btn"
            android:layout_width="43dp"
            android:layout_height="89dp"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="302dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_glass1_selector"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Bottle"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="140dp" android:layout_marginStart="110dp"/>
    <Button
            android:id="@+id/chooseBottle_nextbtn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="160dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="586dp"
            android:background="@drawable/next"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView android:layout_width="308dp" android:layout_height="21dp"
               android:background="@drawable/ic_shelf"
               app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.493"
               app:layout_constraintTop_toBottomOf="@+id/chooseBottle_Bottle3_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>