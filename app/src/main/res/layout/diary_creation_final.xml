<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cons_view"

>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete your Diary"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.06999999"/>
    <EditText
            android:id="@+id/creatingFinal_addTitle_editText"
            android:layout_width="180dp"
            android:layout_height="36dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="给你的酒取个名字吧"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:background="#00FFFFFF"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.19999999"/>
    <ToggleButton
            android:layout_width="160dp" android:layout_height="160dp"
            android:textOn="@null"
            android:textOff="@null"
            android:background="@drawable/sharestate"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:layout_marginBottom="32dp"
            android:id="@+id/creatingFinal_sharebtn"
            android:stateListAnimator="@null"
    />
    <ImageView android:layout_width="160dp" android:layout_height="160dp"
               android:id="@+id/creatingFinal_endbtn"
               app:srcCompat="@drawable/ic_save"
               app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"
               app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp"
               android:layout_marginEnd="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>